            android:duplicateParentState="true"
            android:gravity="center"
            android:text="100"
            android:textColor="@color/white"
            android:textSize="@dimen/x_21" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_saturation"
        style="@style/focusStyle"
        android:layout_width="@dimen/x_367"
        android:layout_height="@dimen/y_67"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/y_19"
        android:background="@drawable/display_bg">

        <TextView
            android:id="@+id/txt_saturation"
            android:layout_width="@dimen/x_100"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/x_17"
            android:duplicateParentState="true"
