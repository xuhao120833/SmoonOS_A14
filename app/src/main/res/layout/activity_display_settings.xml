    <RelativeLayout
        android:id="@+id/rl_sharpness"
        style="@style/focusStyle"
        android:layout_width="@dimen/x_367"
        android:layout_height="@dimen/y_67"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/y_19"
        android:background="@drawable/display_bg">

        <TextView
            android:id="@+id/txt_sharpness"
            android:layout_width="@dimen/x_100"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/x_17"
            android:duplicateParentState="true"
            android:text="@string/sharpness"
            android:textColor="@color/white"
