<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/x_400"
    android:layout_height="@dimen/y_640"
    android:id="@+id/main"
    android:orientation="vertical"
    android:background="@drawable/float_background"
    >

    <FrameLayout
        android:id="@+id/title_frame"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x_88"
        android:background="@drawable/float_title_background">
        <TextView
            android:id="@+id/title"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/display_settings"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="@dimen/x_22" />
    </FrameLayout>

    <RelativeLayout
        android:id="@+id/rl_picture_mode"
        style="@style/focusStyle"
        android:layout_width="@dimen/x_367"
        android:layout_height="@dimen/y_67"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/y_19"
        android:background="@drawable/display_bg">

        <TextView
            android:id="@+id/picture_mode"
            android:layout_width="@dimen/x_100"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/x_17"
            android:duplicateParentState="true"
            android:text="@string/picture_mode"
            android:textColor="@color/white"
            android:textSize="@dimen/x_21"
            android:singleLine="true"
            android:ellipsize="marquee"/>

        <View
            android:layout_width="@dimen/x_33"
            android:layout_height="@dimen/y_33"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/x_17"
            android:background="@drawable/display_right_bg"
            android:duplicateParentState="true" />

        <View
            android:layout_width="@dimen/x_33"
            android:layout_height="@dimen/y_33"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/x_167"
            android:background="@drawable/display_left_bg"
            android:duplicateParentState="true" />

        <TextView
            android:id="@+id/picture_mode_tv"
            android:layout_width="@dimen/x_117"
            android:layout_height="@dimen/y_33"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/x_50"
            android:duplicateParentState="true"
            android:gravity="center"
            android:text="@string/picture_mode_standard_name"
            android:textColor="@color/white"
            android:textSize="@dimen/x_21"
            android:singleLine="true"
            android:ellipsize="marquee"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_brightness"
        style="@style/focusStyle"
        android:layout_width="@dimen/x_367"
        android:layout_height="@dimen/y_67"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/y_19"
        android:background="@drawable/display_bg">

        <TextView
            android:id="@+id/txt_brightness"
            android:layout_width="@dimen/x_100"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/x_17"
            android:duplicateParentState="true"
            android:text="@string/brightness"
            android:textColor="@color/white"
            android:textSize="@dimen/x_21"
            android:singleLine="true"
            android:ellipsize="marquee"/>

        <View
            android:id="@+id/brightness_right"
            android:layout_width="@dimen/x_33"
            android:layout_height="@dimen/y_33"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/x_17"
            android:background="@drawable/display_right_bg"
            android:duplicateParentState="true" />

        <View
            android:id="@+id/brightness_left"
            android:layout_width="@dimen/x_33"
            android:layout_height="@dimen/y_33"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/x_167"
            android:background="@drawable/display_left_bg"
            android:duplicateParentState="true" />

        <TextView
            android:id="@+id/txt_brightness_parcent"
            android:layout_width="@dimen/x_117"
            android:layout_height="@dimen/y_33"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/x_50"
            android:duplicateParentState="true"
            android:gravity="center"
            android:text="100"
            android:textColor="@color/white"
            android:textSize="@dimen/x_21" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_contrast"
        style="@style/focusStyle"
        android:layout_width="@dimen/x_367"
        android:layout_height="@dimen/y_67"
        android:layout_gravity="center_horizontal"
