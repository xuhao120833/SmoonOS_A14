                android:layout_height="@dimen/y_80"
                android:layout_below="@id/rl_audio_mode"
                android:id="@+id/rl_brightness"
                android:layout_marginStart="@dimen/x_100"
                android:layout_marginBottom="@dimen/y_19"
                android:background="@drawable/main_settings_bg"
                style="@style/focusStyle"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/x_50"
                    android:layout_centerVertical="true"
                    android:textColor="@color/tv_color"
                    android:textSize="@dimen/x_27"
                    android:text="@string/brightness"
                    android:duplicateParentState="true"
                    />

                <SeekBar
                    android:layout_width="@dimen/x_357"
                    android:layout_height="wrap_content"
                    android:id="@+id/sb_brightness"
                    android:layout_centerVertical="true"
                    android:max="100"
                    android:progress="50"
                    android:thumb="@drawable/thumb_bright"
                    android:paddingStart="@dimen/x_10"
                    android:paddingEnd="@dimen/x_10"
                    android:splitTrack="false"
                    android:minHeight="@dimen/y_10"
                    android:maxHeight="@dimen/y_10"
                    android:progressDrawable="@drawable/bright_progress_bg"
                   android:layout_toStartOf="@id/brightness_tv"
                    />

                <TextView
                    android:layout_width="@dimen/x_100"
                    android:layout_height="wrap_content"
                    android:id="@+id/brightness_tv"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/x_30"
                    android:textColor="@color/tv_color"
                    android:textSize="@dimen/x_23"
                    android:gravity="center"
                    android:text="0"
                    android:duplicateParentState="true"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="@dimen/x_1080"
                android:layout_height="@dimen/y_80"
                android:layout_below="@id/rl_brightness"
                android:id="@+id/rl_brightness_system"
                android:layout_marginStart="@dimen/x_100"
                android:layout_marginBottom="@dimen/y_19"
                android:background="@drawable/main_settings_bg"
                style="@style/focusStyle"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/x_50"
                    android:layout_centerVertical="true"
                    android:textColor="@color/tv_color"
                    android:textSize="@dimen/x_27"
                    android:text="@string/brightness"
                    android:duplicateParentState="true"
                    />

                <SeekBar
                    android:layout_width="@dimen/x_357"
                    android:layout_height="wrap_content"
                    android:id="@+id/sb_brightness_system"
                    android:layout_centerVertical="true"
                    android:max="100"
                    android:progress="50"
                    android:thumb="@drawable/thumb_bright"
                    android:paddingStart="@dimen/x_10"
                    android:paddingEnd="@dimen/x_10"
                    android:splitTrack="false"
                    android:minHeight="@dimen/y_10"
                    android:maxHeight="@dimen/y_10"
                    android:progressDrawable="@drawable/bright_progress_bg"
                    android:layout_toStartOf="@id/brightness_system_tv"
                    />

                <TextView
                    android:layout_width="@dimen/x_100"
                    android:layout_height="wrap_content"
                    android:id="@+id/brightness_system_tv"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/x_30"
                    android:textColor="@color/tv_color"
                    android:textSize="@dimen/x_23"
                    android:gravity="center"
                    android:text="0"
                    android:duplicateParentState="true"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="@dimen/x_1080"
                android:layout_height="@dimen/y_80"
                android:layout_below="@id/rl_brightness_system"
                android:id="@+id/rl_contrast"
                android:layout_marginStart="@dimen/x_100"
                android:layout_marginBottom="@dimen/y_19"
                android:background="@drawable/main_settings_bg"
                style="@style/focusStyle"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/x_50"
                    android:layout_centerVertical="true"
                    android:textColor="@color/tv_color"
                    android:textSize="@dimen/x_27"
                    android:text="对比度"
                    android:duplicateParentState="true"
                    />

                <SeekBar
                    android:layout_width="@dimen/x_357"
                    android:layout_height="wrap_content"
                    android:id="@+id/sb_contrast"
                    android:layout_centerVertical="true"
                    android:max="100"
                    android:progress="50"
                    android:thumb="@drawable/thumb_bright"
                    android:paddingStart="@dimen/x_10"
                    android:paddingEnd="@dimen/x_10"
                    android:splitTrack="false"
                    android:minHeight="@dimen/y_10"
                    android:maxHeight="@dimen/y_10"
                    android:progressDrawable="@drawable/bright_progress_bg"
                    android:layout_toStartOf="@id/contrast_tv"
                    />

                <TextView
                    android:layout_width="@dimen/x_100"
                    android:layout_height="wrap_content"
                    android:id="@+id/contrast_tv"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/x_30"
                    android:textColor="@color/tv_color"
                    android:textSize="@dimen/x_23"
                    android:gravity="center"
                    android:text="0"
                    android:duplicateParentState="true"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="@dimen/x_1080"
                android:layout_height="@dimen/y_80"
                android:layout_below="@id/rl_contrast"
                android:id="@+id/rl_hue"
                android:layout_marginStart="@dimen/x_100"
                android:layout_marginBottom="@dimen/y_19"
                android:background="@drawable/main_settings_bg"
                style="@style/focusStyle"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/x_50"
                    android:layout_centerVertical="true"
                    android:textColor="@color/tv_color"
                    android:textSize="@dimen/x_27"
                    android:text="色调"
                    android:duplicateParentState="true"
                    />

                <SeekBar
                    android:layout_width="@dimen/x_357"
                    android:layout_height="wrap_content"
                    android:id="@+id/sb_hue"
                    android:layout_centerVertical="true"
                    android:max="100"
                    android:progress="50"
                    android:thumb="@drawable/thumb_bright"
                    android:paddingStart="@dimen/x_10"
                    android:paddingEnd="@dimen/x_10"
                    android:splitTrack="false"
                    android:minHeight="@dimen/y_10"
                    android:maxHeight="@dimen/y_10"
                    android:progressDrawable="@drawable/bright_progress_bg"
                    android:layout_toStartOf="@id/hue_tv"
                    />

                <TextView
                    android:layout_width="@dimen/x_100"
                    android:layout_height="wrap_content"
                    android:id="@+id/hue_tv"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/x_30"
                    android:textColor="@color/tv_color"
                    android:textSize="@dimen/x_23"
                    android:gravity="center"
                    android:text="0"
                    android:duplicateParentState="true"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="@dimen/x_1080"
                android:layout_height="@dimen/y_80"
                android:layout_below="@id/rl_hue"
                android:id="@+id/rl_saturation"
                android:layout_marginStart="@dimen/x_100"
                android:layout_marginBottom="@dimen/y_19"
                android:background="@drawable/main_settings_bg"
                style="@style/focusStyle"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/x_50"
                    android:layout_centerVertical="true"
                    android:textColor="@color/tv_color"
                    android:textSize="@dimen/x_27"
                    android:text="饱和度"
