                    />

                <SeekBar
                    android:layout_width="@dimen/x_357"
                    android:layout_height="wrap_content"
                    android:id="@+id/sb_saturation"
                    android:layout_centerVertical="true"
                    android:max="100"
                    android:progress="50"
                    android:thumb="@drawable/thumb_bright"
                    android:paddingStart="@dimen/x_10"
                    android:paddingEnd="@dimen/x_10"
                    android:splitTrack="false"
                    android:minHeight="@dimen/y_10"
                    android:maxHeight="@dimen/y_10"
                    android:progressDrawable="@drawable/bright_progress_bg"
                    android:layout_toStartOf="@id/saturation_tv"
                    />

                <TextView
                    android:layout_width="@dimen/x_100"
                    android:layout_height="wrap_content"
                    android:id="@+id/saturation_tv"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/x_30"
                    android:textColor="@color/tv_color"
                    android:textSize="@dimen/x_23"
                    android:gravity="center"
                    android:text="0"
                    android:duplicateParentState="true"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="@dimen/x_1080"
                android:layout_height="@dimen/y_80"
                android:layout_below="@id/rl_saturation"
                android:id="@+id/rl_sharpness"
                android:layout_marginStart="@dimen/x_100"
                android:layout_marginBottom="@dimen/y_19"
                android:background="@drawable/main_settings_bg"
                style="@style/focusStyle"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/x_50"
                    android:layout_centerVertical="true"
                    android:textColor="@color/tv_color"
                    android:textSize="@dimen/x_27"
                    android:text="锐度"
                    android:duplicateParentState="true"
                    />

                <SeekBar
                    android:layout_width="@dimen/x_357"
                    android:layout_height="wrap_content"
                    android:id="@+id/sb_sharpness"
                    android:layout_centerVertical="true"
                    android:max="100"
                    android:progress="50"
                    android:thumb="@drawable/thumb_bright"
                    android:paddingStart="@dimen/x_10"
                    android:paddingEnd="@dimen/x_10"
                    android:splitTrack="false"
                    android:minHeight="@dimen/y_10"
                    android:maxHeight="@dimen/y_10"
                    android:progressDrawable="@drawable/bright_progress_bg"
                    android:layout_toStartOf="@id/sharpness_tv"
                    />

                <TextView
                    android:layout_width="@dimen/x_100"
                    android:layout_height="wrap_content"
                    android:id="@+id/sharpness_tv"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/x_30"
                    android:textColor="@color/tv_color"
                    android:textSize="@dimen/x_23"
                    android:gravity="center"
                    android:text="0"
                    android:duplicateParentState="true"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="@dimen/x_1080"
                android:layout_height="@dimen/y_80"
                android:layout_below="@id/rl_sharpness"
                android:id="@+id/rl_red"
                android:layout_marginStart="@dimen/x_100"
                android:layout_marginBottom="@dimen/y_19"
                android:background="@drawable/main_settings_bg"
                style="@style/focusStyle"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/x_50"
                    android:layout_centerVertical="true"
                    android:textColor="@color/tv_color"
                    android:textSize="@dimen/x_27"
                    android:text="红"
                    android:duplicateParentState="true"
                    />

                <SeekBar
                    android:layout_width="@dimen/x_357"
                    android:layout_height="wrap_content"
                    android:id="@+id/sb_red"
                    android:layout_centerVertical="true"
                    android:max="100"
                    android:progress="50"
                    android:thumb="@drawable/thumb_bright"
                    android:paddingStart="@dimen/x_10"
                    android:paddingEnd="@dimen/x_10"
                    android:splitTrack="false"
                    android:minHeight="@dimen/y_10"
                    android:maxHeight="@dimen/y_10"
                    android:progressDrawable="@drawable/bright_progress_bg"
                    android:layout_toStartOf="@id/red_tv"
                    />

                <TextView
                    android:layout_width="@dimen/x_100"
                    android:layout_height="wrap_content"
                    android:id="@+id/red_tv"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/x_30"
                    android:textColor="@color/tv_color"
                    android:textSize="@dimen/x_23"
                    android:gravity="center"
                    android:text="0"
                    android:duplicateParentState="true"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="@dimen/x_1080"
                android:layout_height="@dimen/y_80"
                android:layout_below="@id/rl_red"
                android:id="@+id/rl_green"
                android:layout_marginStart="@dimen/x_100"
                android:layout_marginBottom="@dimen/y_19"
                android:background="@drawable/main_settings_bg"
                style="@style/focusStyle"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/x_50"
                    android:layout_centerVertical="true"
                    android:textColor="@color/tv_color"
                    android:textSize="@dimen/x_27"
                    android:text="绿"
                    android:duplicateParentState="true"
                    />

                <SeekBar
                    android:layout_width="@dimen/x_357"
                    android:layout_height="wrap_content"
                    android:id="@+id/sb_green"
                    android:layout_centerVertical="true"
                    android:max="100"
                    android:progress="50"
                    android:thumb="@drawable/thumb_bright"
                    android:paddingStart="@dimen/x_10"
                    android:paddingEnd="@dimen/x_10"
                    android:splitTrack="false"
                    android:minHeight="@dimen/y_10"
                    android:maxHeight="@dimen/y_10"
                    android:progressDrawable="@drawable/bright_progress_bg"
                    android:layout_toStartOf="@id/green_tv"
                    />

                <TextView
                    android:layout_width="@dimen/x_100"
                    android:layout_height="wrap_content"
                    android:id="@+id/green_tv"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/x_30"
                    android:textColor="@color/tv_color"
                    android:textSize="@dimen/x_23"
                    android:gravity="center"
                    android:text="0"
                    android:duplicateParentState="true"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="@dimen/x_1080"
                android:layout_height="@dimen/y_80"
                android:layout_below="@id/rl_green"
                android:id="@+id/rl_blue"
                android:layout_marginStart="@dimen/x_100"
                android:layout_marginBottom="@dimen/y_19"
                android:background="@drawable/main_settings_bg"
                style="@style/focusStyle"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/x_50"
                    android:layout_centerVertical="true"
                    android:textColor="@color/tv_color"
                    android:textSize="@dimen/x_27"
                    android:text="蓝"
                    android:duplicateParentState="true"
                    />

                <SeekBar
                    android:layout_width="@dimen/x_357"
                    android:layout_height="wrap_content"
                    android:id="@+id/sb_blue"
                    android:layout_centerVertical="true"
                    android:max="100"
                    android:progress="50"
                    android:thumb="@drawable/thumb_bright"
                    android:paddingStart="@dimen/x_10"
                    android:paddingEnd="@dimen/x_10"
                    android:splitTrack="false"
                    android:minHeight="@dimen/y_10"
                    android:maxHeight="@dimen/y_10"
